@model List<GenreResponse>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4 p-3">
        <h3>Genres Data</h3>
        <a asp-controller="Genre" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Create Genre
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-striped border">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Genre Name</th>
                </tr>
            </thead>
                <tbody>
                    @foreach (var genre in Model)
                    {
                        <tr>
                            <td >@genre.Id</td>
                            <td>@genre.Name</td>
                        </tr>
                    }
               </tbody>
        </table>
    </div>
</div>